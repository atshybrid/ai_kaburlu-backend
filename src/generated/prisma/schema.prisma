// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  languageId String   @id @default(cuid())
  name       String
  code       String   @unique
  isRTL      Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  states              State[]
  users               User[]
  CategoryTranslation CategoryTranslation[]
}

model State {
  stateId    String   @id @default(cuid())
  name       String
  languageId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  language Language @relation(fields: [languageId], references: [languageId])
  users    User[]
}

model Role {
  roleId      String   @id @default(cuid())
  name        RoleName
  permissions Json     @default("{}")
  createdAt   DateTime @default(now())

  users User[]
}

model User {
  userId       String   @id @default(cuid())
  mobileNumber String   @unique
  mpin         String
  deviceId     String?
  fcmToken     String?
  roleId       String
  languageId   String?
  stateId      String?
  isVerified   Boolean  @default(false)
  status       String   @default("ACTIVE")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  role     Role      @relation(fields: [roleId], references: [roleId])
  language Language? @relation(fields: [languageId], references: [languageId])
  state    State?    @relation(fields: [stateId], references: [stateId])
}

model Category {
  categoryId String   @id @default(cuid())
  key        String   @unique
  iconUrl    String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  translations CategoryTranslation[]
}

model CategoryTranslation {
  translationId String   @id @default(cuid())
  categoryId    String
  languageId    String
  displayName   String
  createdAt     DateTime @default(now())

  category Category @relation(fields: [categoryId], references: [categoryId])
  language Language @relation(fields: [languageId], references: [languageId])
}

enum RoleName {
  SUPER_ADMIN
  LANGUAGE_ADMIN
  NEWS_DESK
  CITIZEN_REPORTER
  GUEST
}
